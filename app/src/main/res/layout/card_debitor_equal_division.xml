<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/mtrl_card_spacing">

    <ImageView
        android:id="@+id/imgDebitorEqualNewExpenseImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:padding="@dimen/mtrl_card_spacing"
        android:src="@drawable/ic_profile_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameDebitorEqualNewExpenseTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin_text_horizontal"
        android:text="@string/title_name_profile"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/title_card_size"
        app:layout_constraintLeft_toRightOf="@+id/imgDebitorEqualNewExpenseImageView"
        app:layout_constraintRight_toLeftOf="@+id/selectedDebitorEqualNewExpenseCheckBox"
        app:layout_constraintTop_toTopOf="@+id/imgDebitorEqualNewExpenseImageView"
        app:layout_constraintBottom_toBottomOf="@+id/imgDebitorEqualNewExpenseImageView"/>

    <CheckBox
        android:id="@+id/selectedDebitorEqualNewExpenseCheckBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:checked="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgDebitorEqualNewExpenseImageView"
        app:layout_constraintBottom_toBottomOf="@+id/imgDebitorEqualNewExpenseImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>